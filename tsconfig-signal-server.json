{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "types": ["node", "socket.io", "reflect-metadata"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["./signal-server/**/*"]
}
